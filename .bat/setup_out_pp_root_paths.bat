@set PPROOTPATH_MSVC2019_X86=%~dp0\..\.out\msvc2019\x86
@set PPROOTPATH_MSVC2019_X64=%~dp0\..\.out\msvc2019\x64
@set PPROOTPATH_MSVC2022_X86=%~dp0\..\.out\msvc2022\x86
@set PPROOTPATH_MSVC2022_X64=%~dp0\..\.out\msvc2022\x64

@set PPROOTPATH_GCC_73_X86=%~dp0\..\.out\GCC 7.3.0 i686-w64-mingw32\win32-x86
@set PPROOTPATH_GCC_73_X64=%~dp0\..\.out\GCC 7.3.0 i686-w64-mingw32\x64

@set PPROOTPATHS=%PPROOTPATH_MSVC2019_X86% %PPROOTPATH_MSVC2019_X64% %PPROOTPATH_MSVC2022_X86% %PPROOTPATH_MSVC2022_X64% "%PPROOTPATH_GCC_73_X86%" "%PPROOTPATH_GCC_73_X64%"

@FOR %%i IN (%PPROOTPATHS%) DO @(
        @IF EXIST "%%~i\" @(
            @set PPROOTPATH=%%~i
            goto PPROOTPATH_FOUND
)
)

exit /B 1

:PPROOTPATH_FOUND
exit /b 0